<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.yorick.tonbol.sword_quest.TheGame2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserNameDisplay"
        android:text="hero: "
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/right_swing"
        android:layout_above="@+id/UserNameDisplay"
        android:onClick="swing_sword_right"
        android:id="@+id/game_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/game_view"
        android:layout_toEndOf="@+id/game_view" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/left_swing"
        android:onClick="swing_sword_left"
        android:id="@+id/game_button2"
        android:layout_below="@+id/game_view"
        android:layout_toLeftOf="@+id/game_view"
        android:layout_toStartOf="@+id/game_view"
        />
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:hint="GO!"
        android:id="@+id/go_button"
        android:onClick="GOGOGO"
        android:layout_below="@+id/game_view"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="150dp"
        android:id="@+id/game_view"
        android:src="@drawable/flaminglongsword"
        android:layout_above="@+id/game_button"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView12" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView11"
        android:layout_alignTop="@+id/imageView12"
        android:layout_toRightOf="@+id/imageView12"
        android:layout_toEndOf="@+id/imageView12" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView13"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        android:layout_toEndOf="@+id/imageView11" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView14"
        android:layout_alignTop="@+id/imageView15"
        android:layout_toRightOf="@+id/imageView15"
        android:layout_toEndOf="@+id/imageView15" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView15"
        android:layout_alignTop="@+id/imageView13"
        android:layout_toRightOf="@+id/imageView13"
        android:layout_toEndOf="@+id/imageView13" />


    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView19"
        android:layout_toLeftOf="@+id/imageView21"
        android:layout_toStartOf="@+id/imageView21" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView20"
        android:layout_alignTop="@+id/imageView21"
        android:layout_toLeftOf="@+id/imageView22"
        android:layout_toStartOf="@+id/imageView22" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView21"
        android:layout_alignTop="@+id/imageView19"
        android:layout_toLeftOf="@+id/imageView20"
        android:layout_toStartOf="@+id/imageView20" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView22"
        android:layout_alignTop="@+id/imageView20"
        android:layout_toLeftOf="@+id/imageView23"
        android:layout_toStartOf="@+id/imageView23" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/x"
        android:id="@+id/imageView23"
        android:layout_alignTop="@+id/imageView22"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
